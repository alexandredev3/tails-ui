{
  "extends": "./base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": [
      "react",
      "@testing-library/jest-dom"
    ],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}